{
  "extends": "tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "build",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2015"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/*",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "paths": {
    "*": [
      "types/*",
      "node_modules/*",
    ]
  }
}
