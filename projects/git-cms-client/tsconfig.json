{
  "extends": "tsconfig/react-library.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "*": [
      "types/*",
      "node_modules/*"
    ]
  },
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
