{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/*",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "paths": {
    "*": [
      "types/*",
      "node_modules/*",
    ]
  },
}
